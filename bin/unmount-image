#!/bin/bash -e

function find-mounts () {
	mount | grep "${1}" | cut -d' ' -f 3
}

IMAGE="${1}"

if [ -z "${IMAGE}" ]
then
	echo "An image is required"
	exit 1
fi

NAME=$(basename "${IMAGE}")
MOUNT_POINT=$(find-mounts "${NAME}" | head -n 1)

rm -f "${MOUNT_POINT}/usr/bin/qemu-arm-static"
find-mounts "${NAME}" | sort -r | xargs umount
